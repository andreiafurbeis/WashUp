<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RuoliFragmentActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_view_color">

        <Button
            android:id="@+id/fragment_ruoli_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bar_bottom_navigation"
            android:fontFamily="@font/lovelo_black"
            android:paddingLeft="16dp"
            android:text="@string/ruoli"
            android:textAlignment="viewStart"

            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/fragment_ruoli_scroll"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_ruoli_title_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:id="@+id/fragment_ruoli_rubeis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bottomNavigationColor"
                    android:drawableLeft="@drawable/rubeis_icon"
                    android:drawableRight="@drawable/bell_icon"
                    android:elevation="20dp"
                    android:paddingLeft="@dimen/padding_icona_sx"
                    android:text="Andrea"


                    android:textColor="@android:color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:id="@+id/fragment_ruoli_nicolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bottomNavigationColor"
                    android:drawableLeft="@drawable/nicolo_icon"
                    android:drawableRight="@drawable/bell_icon"
                    android:elevation="20dp"
                    android:paddingLeft="@dimen/padding_icona_sx"


                    android:text="NicolÃ²"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </ScrollView>

        <Button
            android:id="@+id/fragment_ruoli_aggiungi_compito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="Aggiungi compito"
            android:textSize="20sp"
            android:textAppearance="@font/lovelo_black"
            android:textAlignment="inherit"
            android:textColor="@android:color/white"
            android:background="@drawable/button"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_ruoli_scroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/fragment_ruoli_scroll" />


    </android.support.constraint.ConstraintLayout>
</RelativeLayout>